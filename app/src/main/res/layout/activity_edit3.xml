<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tambah">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="#4169E1"
        android:layout_height="70dp">

        <ImageButton
            android:id="@+id/kembali7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"
            android:src="@drawable/back" />

        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:text="Ubah Waktu Keberangkatan"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teks1"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nama"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/m_nama2"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="getNama"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teks3"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Kereta"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/m_kereta2"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="getKereta"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teks7"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Kelas"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/m_kelas2"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="getKelas"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teks4"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Asal"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/m_asal2"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="getAsal"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teks5"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tujuan"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/m_tujuan2"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="getTujuan"/>

        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/TanggalBrkt2"
        android:hint="Tanggal Keberangkatan"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/Berangkat2"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:hint="Keberangkatan"
                android:textSize="18sp">
            </AutoCompleteTextView>

            <EditText
                android:id="@+id/Kedatangan2"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:hint="Kedatangan"
                android:layout_marginLeft="35dp"
                android:textSize="18sp"
                android:text="">
            </EditText>

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:text="Simpan Perubahan"
        android:textColor="#fff"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button" />

</LinearLayout>